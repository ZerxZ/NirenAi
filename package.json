{
	"name": "@niren-ai/monorepo",
	"private": true,
	"version": "0.0.1",
	"license": "MIT",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"dev": "run-p -l \"dev:*\"",
		"dev:server": "cd ./apps/backend && bun run dev",
		"dev:web": "cd ./apps/frontend && bun run dev",
		"format": "biome format .",
		"lint": "biome lint .",
		"format-and-lint": "biome check .",
		"format-and-lint:fix": "biome check . --write",
		"typecheck": "bun run --filter '*' typecheck"
	},
	"dependencies": {},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"npm-run-all2": "^7.0.1"
	}
}